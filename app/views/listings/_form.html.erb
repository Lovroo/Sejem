<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :Category %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :Cena_v_â‚¬ %>
    <%= form.number_field :price, required: true %>
  </div>

  <div class="field">
    <%= form.label :Listing_Type %>
    <%= form.select :listing_type, [['Vrsta ponudbe', nil, {:disabled => true}], 'Prodam', 'Kupim', 'Podarim'], required: true %>
  </div>

  <div class="field">
    <%= form.label :Description %>
    <%= form.text_area :description, required: true %>
  </div>

  <div class="field">
    <%= form.label :Status %>
    <%= form.select :status, [['Vrsta ponudbe', nil, {:disabled => true}], 'Novo', 'Rabljeno'], required: true %>
  </div>

  <div class="field">
    <%= form.file_field :image, multiple: true, direct_upload: true, accept: 'image/png, image/jpeg'  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
