<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form_wrapper" style="width:600px">
    <div class="form_container">
      <div class="title_container">
        <h2>Urejanje profila</h2>
      </div>
      <div class="row clearfix">
        <div class="">
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
          </div>
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
    <%= f.text_field :username, autocomplete: 'username', placeholder: 'Uporabniško ime' %>
      </div>
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-phone"></i></span>
            <%= f.text_field :tel_number, autocomplete: 'tel_number', placeholder: 'Telefonska številka' %>
          </div>
          <div class="row clearfix">
            <div class="col_half">
              <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                <%= f.text_field :name, autocomplete: 'name', class:'vnos', placeholder: 'Ime' %>
              </div>
            </div>
            <div class="col_half">
              <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                <%= f.text_field :surname, autocomplete: 'surname', class:'vnos', placeholder: 'Priimek' %>
              </div>
            </div>
          </div>
          <div class="input_field select_option">
            <%= f.label :Država,label_tag: :country, class:'vnos' %>
            <%= f.select :country, options_for_select(CS.countries.map { |c| [c[1], c[0]] } ), class:'vnos'%>
            <div class="select_arrow"></div>
          </div>
          <div class="input_field select_option">
            <%= f.label :Regija, label_tag: :state, class:'vnos' %>
            <%= f.select :state, options_for_select([]), class:'vnos' %>
            <div class="select_arrow"></div>
          </div>
          <div class="input_field select_option">
            <%= f.label :Kraj,label_tag: :city, class:'vnos' %>
            <%= f.select :city, options_for_select([]), class:'vnos' %>
            <div class="select_arrow"></div>
          </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Čakam na potrdilo za: <%= resource.unconfirmed_email %></div>
  <% end %>
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Pustite prazno, če nočete zamenjati' %>
    <% if @minimum_password_length %>
      <br />
      <em> Najmanjše število znakov: <%= @minimum_password_length %></em>
    <% end %>
  </div>

          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Ponovite novo geslo' %>
  </div>

          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: 'Potrebujemo trenutno geslo za spremembo podatkov' %>
  </div>

  <div class="actions">
    <%= f.submit "Posodobite", style: 'width: 300px;margin-left: 125px;border-radius: 5px;margin-bottom:25px;' %>
  </div>


 <%= button_to "Izbrišite račun", registration_path(resource_name), data: { confirm: "Ali ste prepričani?" },
                               method: :delete, style: 'margin-left: 125px;border-radius: 5px;width: 300px' %>

        </div>
      </div>
    </div>
  </div>
<% end %>