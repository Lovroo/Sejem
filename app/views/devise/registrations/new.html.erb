<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form_wrapper">
    <div class="form_container">
      <div class="title_container">
        <h2>Registracija</h2>
      </div>
      <div class="row clearfix">
        <div class="">
            <div class="input_field"> <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'vnos', placeholder: 'Email' %>
            </div>
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
            <%= f.text_field :username, autocomplete: 'username', class:'vnos', placeholder: 'Uporabniško ime' %>
          </div>
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-phone"></i></span>
            <%= f.text_field :tel_number, autocomplete: 'tel_number', class:'vnos', placeholder: 'Telefonska številka'%>
          </div>
            <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "new-password", class:'vnos', placeholder: 'Geslo'%>
            </div>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
            <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'vnos', placeholder: 'Ponovite geslo' %>
            </div>
            <div class="row clearfix">
              <div class="col_half">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                  <%= f.text_field :name, autocomplete: 'name', class:'vnos', placeholder: 'Ime' %>
                </div>
              </div>
              <div class="col_half">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                  <%= f.text_field :surname, autocomplete: 'surname', class:'vnos', placeholder: 'Priimek' %>
                </div>
              </div>
            </div>
            <div class="input_field select_option">
              <%= f.label :Država,label_tag: :country, class:'vnos' %>
              <%= f.select :country, options_for_select(CS.countries.map { |c| [c[1], c[0]] } ), class:'vnos'%>
              <div class="select_arrow"></div>
            </div>
          <div class="input_field select_option">
            <%= f.label :Regija, label_tag: :state, class:'vnos' %>
            <%= f.select :state, options_for_select([]), class:'vnos' %>
            <div class="select_arrow"></div>
          </div>
          <div class="input_field select_option">
            <%= f.label :Kraj,label_tag: :city, class:'vnos' %>
            <%= f.select :city, options_for_select([]), class:'vnos' %>
            <div class="select_arrow"></div>
          </div>
          <%= f.submit "Registracija", class:'button'  %>
        </div>
      </div>
    </div>
  </div>
<% end %>