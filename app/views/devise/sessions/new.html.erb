<div class="prijava">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container_prijava">
    <div class="row_prijava">
      <h2 style="text-align:center">Prijava</h2>

      <div class="col_prijava">
        <div style="margin-top: 35px;">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to '<i class="fa fa-facebook fa-fw"></i>Sign in with Facebook'.html_safe, omniauth_authorize_path(resource_name, provider), method: :post, class:"fb gumb" %>
        <% end %>
        <a href="#" class="google gumb"><i class="fa fa-google fa-fw">
        </i> Login with Google+
        </a>
        </div>
      </div>

      <div class="col_prijava">
        <div class="hide-md-lg">
          <p>Or sign in manually:</p>
        </div>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'vnos' %>
        <%= f.label :geslo %>
        <%= f.password_field :password, autocomplete: "current-password", class:'vnos'  %>
        <%= f.submit "Log in", class:'vnos' %>
      </div>
    </div>
</div>

<div class="bottom-container">
  <div class="row_prijava">
    <div class="col_prijava">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Registracija", new_registration_path(resource_name), style:'color:white', class:'gumb' %><br />
      <% end %>
    </div>
    <div class="col_prijava">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Pozabljeno geslo?", new_password_path(resource_name), style:'color:white', class:'gumb' %><br />
      <% end %>
    </div>
  </div>
</div>
<% end %>
</div>
